{
  "inbounds": [
    {
      "type": "vless",
      "tag": "vless_tls",
      "listen": "::",
      "listen_port": 8443,
      "users": [
{% for u in users %}
        {
          "name": "{{ u.name }}",
          "uuid": "{{ u.uuid }}",
          "flow": "xtls-rprx-vision"
        }{{ "," if not loop.last else "" }}
{% endfor %}
      ],
      "tls": {
        "enabled": true,
        "server_name": "www.google.com",
        "reality": {
          "enabled": true,
          "handshake": {
            "server": "www.google.com",
            "server_port": 443
          },
          "private_key": "{{ keys.vless }}",
          "short_id": [
{% for u in users %}
            "{{ u.short_id }}"{{ "," if not loop.last else "" }}
{% endfor %}
          ]
        }
      },
      "multiplex": {
        "enabled": true
      }
    },
    {
      "type": "vless",
      "tag": "vless_grpc",
      "listen": "::",
      "listen_port": 2053,
      "users": [
{% for u in users %}
        {
          "name": "{{ u.name }}",
          "uuid": "{{ u.uuid }}"
        }{{ "," if not loop.last else "" }}
{% endfor %}
      ],
      "transport": {
        "type": "grpc",
        "service_name": "{{ keys.grpc }}"
      }
    },
    {
      "type": "vless",
      "tag": "vless_ws",
      "listen": "::",
      "listen_port": 3053,
      "users": [
{% for u in users %}
        {
          "name": "{{ u.name }}",
          "uuid": "{{ u.uuid }}"
        }{{ "," if not loop.last else "" }}
{% endfor %}
      ],
      "transport": {
        "type": "ws",
        "path": "{{ keys.ws }}"
      }
    },
    {
      "type": "vless",
      "tag": "vless_http_upgrade",
      "listen": "::",
      "listen_port": 4053,
      "users": [
{% for u in users %}
        {
          "name": "{{ u.name }}",
          "uuid": "{{ u.uuid }}"
        }{{ "," if not loop.last else "" }}
{% endfor %}
      ],
      "transport": {
        "type": "httpupgrade",
        "path": "{{ keys.http_upgrade }}"
      }
    }
  ]
}
